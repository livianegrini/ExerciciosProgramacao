<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Relatório de Feridas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-5">

    <h1>Relatório de Feridas</h1>

    <ul class="list-group">
        <% feridas.forEach(f => { %>
            <li class="list-group-item">
                <strong><%= f.paciente_nome %></strong> - <%= f.tipo %>,
                Tempo: <%= f.tempo %> mês(es),
                Descrição: <%= f.descricao %>,
                Data: <%= new Date(f.data_cadastro).toLocaleString() %>
            </li>
        <% }); %>
    </ul>

    <a href="/" class="btn btn-secondary mt-3">Voltar</a>

</body>
</html>